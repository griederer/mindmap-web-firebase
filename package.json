{
  "name": "nodem",
  "version": "0.1.0",
  "description": "NODEM - Interactive Mind Map Presentation Tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "deploy:dev": "npm run build && firebase hosting:channel:deploy dev",
    "deploy:staging": "npm run build && firebase hosting:channel:deploy staging",
    "deploy:prod": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.8",
    "framer-motion": "^11.18.0",
    "zod": "^3.24.1",
    "firebase": "^12.4.0",
    "konva": "^10.0.2",
    "react-konva": "^19.0.10",
    "lucide-react": "^0.545.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^3.2.4",
    "jsdom": "^27.0.0",
    "eslint": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6"
  }
}
